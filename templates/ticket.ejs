<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Parking Ticket</title>

  <!-- Tailwind -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    @media print {
      body {
        background: white !important;
      }

      .no-print {
        display: none !important;
      }
    }
  </style>
</head>

<body class="bg-gray-200 min-h-screen flex items-center justify-center px-4">

  <!-- CARD -->
  <div class="max-w-lg w-full bg-white rounded-2xl shadow-xl p-8 text-center">

    <!-- TITLE -->
    <h1 class="text-3xl font-semibold text-gray-800 mb-2">
      Parking Ticket
    </h1>

    <p class="text-gray-500 mb-6">
      Payment successful. Please keep this ticket for reference.
    </p>

    <!-- DETAILS BOX -->
    <div class="bg-gray-100 rounded-xl p-6 space-y-5 text-left">

      <div class="flex justify-between">
        <span class="text-gray-500">Payment ID</span>
        <span class="font-medium text-gray-800">
          <%= paymentId %>
        </span>
      </div>

      <div class="flex justify-between">
        <span class="text-gray-500">Amount Paid</span>
        <span class="font-semibold text-green-600">
          $<%= amount %>
        </span>
      </div>

      <div class="flex justify-between">
        <span class="text-gray-500">Payment Status</span>
        <span class="font-semibold text-green-600 uppercase">
          <%= status %>
        </span>
      </div>

      <div class="flex justify-between">
        <span class="text-gray-500">Time</span>
        <span class="font-medium text-gray-800">
          <%= time %>
        </span>
      </div>

    </div>

    <!-- CONFIRMATION -->
    <div class="flex items-center justify-center gap-2 mt-6">
      <span class="w-3 h-3 bg-green-500 rounded-full"></span>
      <span class="text-green-600 font-medium">
        Payment Confirmed
      </span>
    </div>

    <!-- DOWNLOAD BUTTON -->
    <button
      id="downloadBtn"
      onclick="downloadPDF()"
      class="no-print mt-4 w-full bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-xl text-lg font-medium flex items-center justify-center gap-2">

      <!-- Download Icon -->
      <svg xmlns="http://www.w3.org/2000/svg"
           class="h-6 w-6"
           fill="none"
           viewBox="0 0 24 24"
           stroke="currentColor">
        <path stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
      </svg>

      Downloading Ticket
    </button>

    <!-- FOOTER -->
    <p class="text-gray-400 text-sm mt-6">
      Thank you for using our parking service.
    </p>

  </div>

  <!-- PDF LIBRARIES -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

  <script>
    async function downloadPDF() {

      const { jsPDF } = window.jspdf;

      const element = document.querySelector(".max-w-lg");
      const button = document.getElementById("downloadBtn");

      // ✅ Hide button before capture
      button.style.display = "none";

      const canvas = await html2canvas(element, {
        scale: 2
      });

      // ✅ Show button again
      button.style.display = "flex";

      const imgData = canvas.toDataURL("image/png");

      const pdf = new jsPDF({
        orientation: "portrait",
        unit: "px",
        format: "a4"
      });

      const imgWidth = 400;
      const imgHeight =
        (canvas.height * imgWidth) / canvas.width;

      pdf.addImage(imgData, "PNG", 20, 20, imgWidth, imgHeight);

      pdf.save("parking-ticket-<%= paymentId %>.pdf");
    }
  </script>

</body>
</html>
